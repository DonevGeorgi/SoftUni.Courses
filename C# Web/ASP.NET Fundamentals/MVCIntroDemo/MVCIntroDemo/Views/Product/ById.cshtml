@using MVCIntroDemo.Models.Products
@model ProductViewModel;

@{
    ViewData["Title"] = $"Product N.{Model.Id}";
}

<div class="row">
    <div class="col-3">
        <div class="card">
            <div class="card-header text-center">@ViewData["Title"]</div>
            <div class="card-body">
                <h5 class="card-title">Product Name: @Model.Name</h5>
                <p class="card-text">Price: @Model.Price lv.</p>
            </div>
        </div>
    </div>
</div>
